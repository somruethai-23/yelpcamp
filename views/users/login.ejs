<% layout('../layout/boilerplate') %>
<div class="card mt-4 mb-4" style="box-shadow: #00000029 0px 1px 4px;">
    <div class="row">
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" class="img-fluid" alt="...">
        </div>
        <div class="col-md-6 mt-3">
            <div class="container-fluid">
                <h2 class="mb-3 d-flex justify-content-center">Sign-in</h2>
            <form action="/login" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Username"
                        required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password"
                        required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button class="btn btn-dark">Sign in</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>